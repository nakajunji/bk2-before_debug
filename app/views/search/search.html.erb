<% if @model == "book" %>
	<h1>Books search for '<%= @content %>'</h1>
	<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @datas.each do |data| %>
					<tr>
						<td>
							<%= link_to user_path(data.user) do %>
								<%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to data.title, book_path(data) %></td>
						<td><%= data.body %></td>
					</tr>
				<% end %>
			</tbody>
	</table>
<% elsif @model == "user" %>
<h1>Users search for '<%= @content %>'</h1>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @datas.each do |data| %>
			<tr>
				<td><%= attachment_image_tag(data, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= data.name %></td>
				<td><%= link_to "Show", user_path(data) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>